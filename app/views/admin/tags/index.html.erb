<div class="main">
  <div class="heading_and_search">
    <h1><i class="fas fa-tags"></i>タグ作成</h1>
    <!--検索フォーム-->
    <%= search_form_for @q, url: search_admin_tags_path, class: "form-inline" do |f| %>
      <%= f.search_field :name_cont, placeholder: "タグ検索",class: "form-control rounded-pill" %>
      <%= button_tag type: "submit", class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <!--バリデーションエラー-->
    <%= render '/layouts/validates', validates: @tag %>

    <!--タグ名入力フォーム-->
   
    <%= form_with model: @tag, url: admin_tags_path ,method: :post , class: "form-inline" do |f| %>
      <%= f.text_field :name,  placeholder: "タグ名を入力して新規作成",class: 'form-control new-tag-form' %>
      <div class="btn-background">
        <%= button_tag "✓", class:"tag-form-btn" %>
      </div>
    <% end %>
  </div>

  <div class="notice mt-3"><%= flash[:notice] %></div>

    <div class="tag-index-box">
    <% @tags.each do |tag| %>
      <%= render '/admin/shared/tags', tag: tag %>
    <% end %>
    </div>

  <%= paginate @tags, theme: 'twitter-bootstrap-4' %>
</div>
