<div class="container">
  <div class="row">
    <div class="col-12 main">
      <h1 style="font-size: 2.2rem;"><%= @tag.name %> <i class="fas fa-tag"></i><span style="font-size:1.8rem"> のノート</span><span class="ml-3" style="font-size: 1.5rem">(全<%= @tag.notes.count %>件)</span></h1>
      
        <% @tag_notes.each do |tag_note| %>
          <div class="note-contents note-contents2">
            <%= render '/layouts/user_info', user: note.user %><!--投稿ﾕｰｻﾞｰ情報-->
            <%= render '/admin/shared/note_index', note: tag_note %><!--投稿一覧-->
          </div>
        <% end %>
      
    </div>
  </div>
</div>