<div class="container">
  <div class="row">
    <div class="col-12 main">
      <%= flash[:notice] %>
      <h1>Users<span class="ml-1" style="font-size: 1.5rem">みんなのプロフィール</span></h1>
      <%= search_form_for @q, url: search_admin_users_path do |f| %>
        <div class="row">
          <div class="col-3">
            <%= f.search_field :name_cont, placeholder: "ユーザー検索" %>
          </div>
          <div class="9">
            <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>

      <% @users.each do |user| %>
          <%= link_to (admin_user_path(user.id)) do %>
          <div class="users-box">
            <%= render '/layouts/user_info', user: user %><br>
            <%= user.introduction %>
            <% if user.is_deleted == true %>
              <span class="ml-3">退会済ユーザー</span>
            <% end %>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

