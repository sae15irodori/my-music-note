<div class="main">
  <%= flash[:notice] %>
  <div class="heading_and_search">
    <div>
      <h1><%= link_to "Users", admin_users_path %><span class="ml-1" style="font-size: 1.5rem">登録中ユーザー<%= @users.total_count %>名</span></h1>
      <div class="users-num">
        <%= link_to admin_users_path do %>
          登録中<%= @users.total_count %>
        <% end %>
     
        <%= link_to deleted_admin_users_path do %>
          退会済<%= @deleted_users.total_count %>
        <% end %>
  
        <%= link_to total_admin_users_path do %>
          累計<%= @total_users.total_count %>
        <% end %>
      </div>
    </div>
    
    <!--検索フォーム-->
    <%= search_form_for @q, url: search_admin_users_path, class: "form-inline" do |f| %>
      <%= f.search_field :name_cont, placeholder: "ユーザー検索",class: "form-control rounded-pill" %>
      <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <% @users.each do |user| %>
      <%= render '/admin/shared/user_index', user: user %>
  <% end %>
  <%= paginate @users, theme: 'twitter-bootstrap-4' %>
</div>