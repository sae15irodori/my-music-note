<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>ユーザー検索</h1>
      <%= search_form_for @q, url: search_admin_users_path do |f| %>
        <%= f.search_field :name_cont, placeholder: "ユーザー検索" %>
        <%= f.submit '🔍', class: "btn-sm btn-outline-secondary" %>
      <% end %>

      <% if @results.present? %>
        <% @results.each do |user| %>
          <%= link_to (admin_user_path(user.id)) do %>
          <div class="note_box2_6">
            <%= render '/layouts/user_info', user: user %>
            <%= user.introduction %>
          </div>
          <% end %>
        <% end %>
      <% else %>
        一致する結果はありませんでした。o○
      <% end %>
    </div>
  </div>
</div>