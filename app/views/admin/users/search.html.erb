<div class="container">
  <div class="row">
    <div class="col-12 main">
      <h1>ユーザー検索<span class="ml-3" style="font-size: 1.5rem">(全<%= @results.count %>件)</span></h1>
      <%= search_form_for @q, url: search_admin_users_path, class: "form-inline" do |f| %>
        <%= f.search_field :name_cont, placeholder: "ユーザー検索",class: "form-control rounded-pill" %>
        <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>

      <% if @results.present? %>
        <% @results.each do |user| %>
          <%= render '/admin/shared/user_index', user: user %>
        <% end %>
      <% else %>
        一致する結果はありませんでした。o○
      <% end %>
    </div>
  </div>
</div>