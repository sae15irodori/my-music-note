<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>コメント検索</h1>
      <%= search_form_for @q, url: search_admin_notes_path do |f| %>
        <%= f.search_field :comment_cont, placeholder: "コメント検索" %>
        <%= f.submit '🔍', class: "btn-sm btn-outline-secondary" %>
      <% end %>

      <% if @results.present? %>
        <% @results.each do |comment| %>
          <%= link_to admin_user_path(comment.user.id) do %>
            <%= render '/layouts/user_info', user: comment.user %>
          <% end %>
            <%= link_to comment.comment, admin_note_path(comment.note.id) %>
            <%= link_to "削除", admin_note_note_comment_path(comment.note.id, comment.id), method: :delete, data: {confirm: 'このコメントを管理者として消しますか？'} %>
        <% end %>
      <% else %>
        一致する結果はありませんでした。o○
      <% end %>
    </div>
  </div>
</div>