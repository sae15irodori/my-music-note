<div class="container">
  <div class="row">
    <div class="col-12 main">
      <span class="notice"><%= flash[:notice] %></span>
      <h1>コメント一覧</h1>
      <!--検索フォーム-->
      <div class="row">
          <div class="col-3">
            <%= search_form_for @q, url: search_admin_note_note_comments_path do |f| %>
              <%= f.search_field :comment_cont, placeholder: "コメント検索",class: "form-control rounded-pill" %>
          </div>
          <div class="9">
            <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>

        <% @comments.each do |comment| %>
           <%= render '/admin/shared/comments', comment: comment %>
        <% end %>
        <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>