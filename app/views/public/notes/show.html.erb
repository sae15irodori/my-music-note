<div class="container">
  <div class="row">
    <div class="col-12 col-md-12">
      <%= flash[:notice] %>
      <h1>Note</h1>

      <div class="note_box2_6">
        <h2><%= @note.title %></h2>
        <p><%= @note.body %></p>
      </div>
      <%# if @note.user == current_user %><!--ログイン中ユーザーならeditとdestroyﾘﾝｸ-->
        <%= link_to "編集", edit_note_path(@note.id) %>
        <%= link_to "削除", note_path(@note.id), method: :delete %>
      <%# end %>

    </div>
  </div>
</div>