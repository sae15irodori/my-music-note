<div class="container">
  <div class="row">
    <div class="col-12 main">
      <%= flash[:notice] %>
      <h1>Notes</h1>
      <p>みんなのノート</p>
      <%= search_form_for @q, url: search_notes_path do |f| %>
        <%= f.search_field :title_or_body_cont, placeholder: "ノート検索",class:"isearch1" %>
        <%= f.submit '🔍', class: "button1" %>
      <% end %>

      <% @notes.each do |note| %>
        <%= render '/public/shared/note_index', note: note %>
      <% end %>

    </div>
  </div>
</div>