<div class="container">

  <h1>-Sign in-</h1>
  <h2> 新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg" %>
  </div>

  <div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "rounded-lg" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "rounded-lg" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
