<div class="container">
  <div class="row">
    <div class="col-12 main">
      <h1>Tags<span class="ml-1" style="font-size: 1.5rem">タグ検索結果</span><span class="ml-3" style="font-size: 1.5rem">(全<%= @results.count %>件)</span></h1>
      <!--検索フォーム-->
      <%= search_form_for @q, url: search_tags_path, class: "form-inline" do |f| %>
        <%= f.search_field :name_cont, placeholder: "タグ検索",class: "form-control rounded-pill" %>
        <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>

      <% if @results.present? %>
        <% @results.each do |tag| %>
        <div class="tag">
          <i class="fas fa-tag"></i><%= link_to tag.name, tag_path(tag.id) %>
        </div>
        <% end %>
      <% else %>
        一致する結果はありませんでした。o○
      <% end %>
    </div>
  </div>
</div>