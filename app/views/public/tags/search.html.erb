<div class="container">
  <div class="row">
    <div class="col-12 main">
      <h1>Tags<span class="ml-1" style="font-size: 1.5rem">タグ一覧</span></h1>
      <!--検索フォーム-->
      <%= search_form_for @q, url: search_tags_path do |f| %>
        <div class="row">
          <div class="col-3">
            <%= f.search_field :name_cont, placeholder: "タグ検索",class: "form-control rounded-pill" %>
          </div>
          <div class="9">
            <%= button_tag type: "submit", class: "btn btn-default　rounded-pill" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @results.present? %>
        <% @results.each do |tag| %>
          <%= link_to tag.name, tag_path(tag.id), class: "tag" %>
        <% end %>
      <% else %>
        一致する結果はありませんでした。o○
      <% end %>
    </div>
  </div>
</div>