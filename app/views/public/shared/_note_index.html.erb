<div class="note_box2_6">
  <!--投稿ﾕｰｻﾞｰ情報-->
  <%= link_to user_path(note.user.id) do %>
    <%= image_tag note.user.get_image, class: "rounded-circle" %>
    <%= note.user.name %>
  <% end %>
  <!--投稿一覧-->
  <%= link_to (note_path(note.id)) do %>
    <%= render '/layouts/note_contents', note: note %><!--投稿内容-->
    <p><%= render '/public/favorites/favorites_btn', note: note %><!--いいねボタン-->
      <span>💬<%= note.note_comments.count %></span><!--ｺﾒﾝﾄ件数-->
    </p>
  <% end %>
</div>